{
  "name": "git-blog-next-markdown",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:main": "next dev",
    "dev:hcm": "hcm 'src/**/*.module.css' -o .hcm -w",
    "build": "run-s prebuild:* build:next",
    "start": "next start",
    "lint": "next lint",
    "build:next": "next build",
    "prebuild": "run-s prebuild:*",
    "prebuild:clean": "rimraf ./tmp",
    "prebuild:init": "mkdir -p ./tmp",
    "prebuild:sitemap": "tsx ./src/scripts/generate-sitemap.ts",
    "prebuild:rss": "tsx ./src/scripts/rss.ts",
    "prebuild:search": "tsx ./src/scripts/search-json.ts",
    "typecheck": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --silent --config=jest.config.js",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch --silent --config=jest.config.js",
    "prepare": "husky install",
    "prettier": "prettier --config ./.prettierrc --write ./src"
  },
  "license": "MIT",
  "dependencies": {
    "d3": "^7.6.1",
    "d3-sankey": "^0.12.3",
    "dayjs": "^1.11.5",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "happy-css-modules": "^3.2.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.4",
    "markdown-it-prism": "^2.3.0",
    "minisearch": "^7.1.1",
    "next": "^14.1.3",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.2",
    "swr": "^2.3.0",
    "typescript": "^4.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/d3": "^7.4.0",
    "@types/d3-sankey": "^0.11.2",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.16",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "@types/sharp": "^0.30.5",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "autoprefixer": "^10.4.8",
    "eslint-config-next": "^12.3.0",
    "eslint-config-prettier": "^8.5.0",
    "globby": "^13.1.2",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-environment-jsdom": "^29.0.2",
    "lint-staged": "^13.0.3",
    "node-fetch": "^2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.0",
    "tsx": "^4.19.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache",
    "*.{html, css}": "stylelint",
    "*.**": "prettier --check --ignore-unknown"
  },
  "volta": {
    "node": "20.3.0"
  }
}
